/** Notifications **/

.notification {
	border: 1px solid;
	border-left: none;
	border-right: none;
	border-top: none;
	padding: 10px 10px 10px 55px;
	margin: 5px 0;
	background-position: 10px 50% !important;
	background-repeat: no-repeat !important;
	position: relative;
}
.notification p {
	margin: 0;
	padding: 0;
}
.notification.error {
	background: #ffcece url('../img/messagebox/error.gif');
	border-color: #df8f8f;
	color: #665252;
}
.notification.attention {
	background: #fffbcc url('../img/messagebox/warning.gif');
