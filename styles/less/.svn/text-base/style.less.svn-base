	color: #556652;
}
.notification.information {
	background: #dbe3ff url('../img/messagebox/information.gif');
	border-color: #a2b4ee;
	color: #585b66;
}
.close {
	background-image: url('../img/icons/16/cross-small-grey.png');
	text-indent: -99999px;
	overflow: hidden;
	display: block;
	position: absolute;
	right: 10px;
	top: 10px;
	height: 16px;
	width: 16px;
}

